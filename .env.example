############################################
# SENDIX – Ejemplo de variables de entorno  #
# Copiá este archivo a .env y completá      #
############################################

# Base de datos Postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/sendix?schema=public"

# JWT (usar valores fuertes en producción)
JWT_SECRET="cambia_esto_por_un_secret_seguro"
# Opcional si implementás refresh tokens luego
JWT_REFRESH_SECRET="cambia_esto_refresh"

# Configuración de cookies / CORS
# Lista separada por comas de orígenes permitidos (sin espacios extra)
CORS_ORIGIN="http://localhost:5173,http://localhost:5500"
COOKIE_SAMESITE=none
NODE_ENV=development
PORT=4000

# URL pública del frontend (para links de reset password)
APP_BASE_URL="http://localhost:4000"

# Bootstrap de admin SENDIX (solo primera vez). Podés borrar luego.
SENDIX_ADMIN_EMAIL="admin@sendix.local"
SENDIX_ADMIN_PASSWORD="Cambiar123"
SENDIX_ADMIN_NAME="Admin SENDIX"

# SMTP (para recuperación de contraseña) – dejar vacío si no usás
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="no-reply@sendix"

# Feature flags / comportamientos
AUTH_REQUIRED=true

# Logging (ejemplo simple; integrar con pino/winston si querés)
LOG_LEVEL=info
